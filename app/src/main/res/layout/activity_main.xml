<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="vertical"
            android:gravity="center">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test osobowośći"
                android:textSize="23sp"
                android:layout_margin="20dp"/>

            <RadioGroup
                android:id="@+id/seasons_radiogroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/spring_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wiosna"
                    />

                <RadioButton
                    android:id="@+id/summer_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lato"/>

                <RadioButton
                    android:id="@+id/autumn_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jesień"/>

                <RadioButton
                    android:id="@+id/winter_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zima"/>

            </RadioGroup>

            <DatePicker
                android:id="@+id/datepicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:datePickerMode="calendar"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:layout_marginTop="-50dp"
                android:layout_marginBottom="-50dp"
                />

            <TimePicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleY="0.6"
                android:scaleX="0.6"
                android:layout_marginTop="-90dp"
                android:layout_marginBottom="-50dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Co lubisz robić w wolnym czasie?"
                android:textSize="20sp"/>

            <CheckBox
                android:id="@+id/reading_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Czytać"/>

            <CheckBox
                android:id="@+id/drawing_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rysować"/>

            <CheckBox
                android:id="@+id/sport_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Uprawiać sport"/>

            <CheckBox
                android:id="@+id/computer_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grać na komputerze"/>

            <CheckBox
                android:id="@+id/nature_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spędzać czas w naturze"/>




        </LinearLayout>

    </ScrollView>

</LinearLayout>